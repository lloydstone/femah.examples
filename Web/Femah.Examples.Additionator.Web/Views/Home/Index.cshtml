@using Femah.Core

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Additionator</h1>
    <p class="lead"> is a cloud-based service for adding numbers.</p>
</div>

<div class="row">
    <form role="form" action="/arithmetic/add" method="post" class="form-horizontal">
        <div class="form-group">
            <label for="firstNumber" class="col-sm-2 control-label">First number</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="firstNumber" name="firstNumber" placeholder="Enter first number" autocomplete="off" />
            </div>            
        </div>
        <div class="form-group">
            <label for="secondNumber" class="col-sm-2 control-label">Second number</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="secondNumber" name="secondNumber" placeholder="Enter second number" autocomplete="off" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn @(Femah.IsFeatureOn((int)FeatureSwitches.GreenButtons) ? "btn-success" : "btn-default")">Add!</button>
            </div>
        </div>
    </form>
</div>